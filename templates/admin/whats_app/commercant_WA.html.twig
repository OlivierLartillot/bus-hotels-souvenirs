{% extends 'base.html.twig' %}

{% block title %}Hello WhatsAppController!{% endblock %}

{% block body %}

    <h1>WhatsApp du commercant</h1>

<div id="message">{# https://unicode-org.github.io/icu/userguide/format_parse/datetime/#datetime-format-syntax #}
{{ infosClient.day|format_datetime(pattern="EEEE D", locale='es')|capitalize }}
LODS {{ infosClient.numberPersons }}
{{ infosClient.bus.hotel }} - {{ infosClient.roomNumber }}</div>

<div id="tel">{{ infosClient.whatsAppNumber }}</div>

