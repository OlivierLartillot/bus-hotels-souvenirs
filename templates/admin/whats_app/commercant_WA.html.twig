    let message = document.querySelector('#message').textContent
    let phone = document.querySelector('#tel').textContent

    console.log(message)
    window.location.href = encodeURI('https://api.whatsapp.com/send?phone=+1 (829) 397-3920&text=' + message);
</script>

{% endblock %}
