{% extends 'base.html.twig' %}

{% block title %}Welcome to bus tour hotel souvenirs{% endblock %}

{% block body %}

<div class ="container-fluid pb-5">
    <h1 class="text-center mt-3">Welcome to bus tour</h1>

    <div class="container bg-light py-5 mt-3 border rounded shadow ">

        <h2 class="text-center my-5">{% trans %}Please Check your language{% endtrans %}</h2>
        <div class="row text-center justify-content-md-center">
        {% for locale in locales %}
            {% if locale == app.request.locale %}
            <div class="col-3 col-md-2 col-xl-1">
                <a href="{{ path('app_change_locale', {'locale': locale}) }}"><img src="{{ asset('images/drapeaux/'~locale~'.png') }}" alt="{{ locale }} flag" class="img-fluid flag-language border border-3 border-primary rounded-circle"></a>
            </div>
            {% else %}
            <div class="col-3 col-md-2 col-xl-1">
                <a href="{{ path('app_change_locale', {'locale': locale}) }}"><img src="{{ asset('images/drapeaux/'~locale~'.png') }}" alt="{{ locale }} flag"  class="img-fluid flag-language"></a>
            </div>
            {% endif %}
        {% endfor %}
        <div>
        <div class="row justify-content-center text-center mt-5">
            <div class="col">
                {% trans %} You have choosen the english langage, do you want to continue ? {% endtrans %}
            </div>
        </div>
        <div class="row justify-content-center text-center mt-5">
            <div class="col">
                <a href="{{ path('app_infos_client_new') }}" class="btn btn-primary ">{% trans %} Next Step {% endtrans %}</a>
            <div>
        </div>
    </div>
    
</div>

{% endblock %}
